<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="net.javajoy.jss.w_12_2.orm.personnel.Employee" table="employees" schema="" catalog="personnel">
        <id name="id" column="id"/>
        <property name="name" column="name"/>
        <property name="age" column="age"/>
        <property name="salary" column="salary"/>
        <many-to-one name="position" class="net.javajoy.jss.w_12_2.orm.personnel.Position">
            <column name="fkPosition" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>