    <servlet>
        <servlet-name>userValidator</servlet-name>
        <servlet-class>com.becomejavasenior.servlets.UserValidator</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userValidator</servlet-name>
        <url-pattern>/userValidator</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>UserCheckFilter</filter-name>
        <filter-class>com.becomejavasenior.filters.UserCheckFilter</filter-class>
        <init-param>
            <param-name>loginActionURI</param-name>
            <param-value>/userValidator</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UserCheckFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/META-INF/applicationContext.xml</param-value>
    </context-param>

    <error-page>
        <location>/pages/errorsPage.jsp</location> <!-- страница для всяческих ошибок -->
    </error-page>

</web-app>
